@using Microsoft.AspNetCore.Identity
@using AppMvc.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right ">
            <li class="nav-item">
                <a title="@UserManager.GetUserName(User)!" class="nav-link  login-text-color " asp-area="Identity"  asp-controller="Manage" asp-action="Index" title="Manage">
                    <i class="fa-regular fa-user"></i>
                     </a>
            </li>
            <li class="nav-item">
                <button title="Đăng xuất" type="submit" class="btn btn-link navbar-btn navbar-link login-text-color text-decoration-none">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right  ">
        
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link login-text-color" asp-area="Identity" asp-controller="Account" asp-action="Login">
                <i class="fa-solid fa-right-to-bracket"></i>
            </a>
        </li>
    </ul>
}