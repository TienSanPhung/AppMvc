@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";

    Layout = "_LoginLayout.cshtml";
}


<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Xin Chào!</h1>
                            </div>
                            <form  asp-controller="Account" asp-action="Login"
                                asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="user" role="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="UserNameOrEmail" class="form-control form-control-user">
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input"
                                            id="customCheck">
                                        <label asp-for="RememberMe" class="custom-control-label" for="customCheck">
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Đăng nhập
                                </button>
                                </form>
                                <hr>
                                @{
                                    var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();

                                    var loginProviders = schemes.ToList();

                                    if (loginProviders.Count == 0)

                                    {

                                    }

                                    else

                                    {
                                        <form  asp-controller="Account" asp-action="ExternalLogin"
                                            asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="user"
                                            role="form">
                                            <div>
                                                <p>
                                                    @foreach (var provider in loginProviders)

                                                    {

                                                        var css = "btn btn-user btn-block ";

                                                        var icon = "";
                                                        @if (provider.Name == "Google")

                                                        {
                                                            css = "btn btn-google btn-user btn-block ";

                                                            icon = "<i class=\"fa-brands fa-google\"></i>";

                                                        }
                                                        else if (provider.Name == "Facebook")

                                                        {
                                                            css = "btn btn-facebook btn-user btn-block ";

                                                            icon = "<i class=\"fa-brands fa-facebook\"></i>";

                                                        }

                                                        <button type="submit" class="@css" value="@provider.Name" name="provider"
                                                            title="Log in using your @provider.Name account">
                                                            @Html.Raw(icon) Đăng nhập với @provider.Name
                                                        </button>
                                                    }
                                                </p>
                                            </div>
                                        </form>
                                    }
                                }
                            @* </form> *@
                            <div class="text-center">
                                <a class="small" asp-action="ForgotPassword">Quyên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="small">Tạo
                                    tài khoản mới!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }  

}
