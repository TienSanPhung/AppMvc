@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout.cshtml";
}

<div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Bạn Quên Mật Khẩu Ư?</h1>
                                        <p class="mb-4">Chúng ta sẽ lấy lại nó. 
                                            Chỉ cần nhập email tài khoản của bạn và truy cập vào email để lấy lại nó!</p>
                                    </div>
                                    <form class="user" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <input asp-for="Email" type="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Làm mới mật khẩu</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-action="ForgotPassword">Quyên mật khẩu?</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="small">Tạo
                                            tài khoản mới!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
