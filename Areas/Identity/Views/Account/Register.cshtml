@inject SignInManager<AppUser> SignInManager

@model RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "_LoginLayout.cshtml";
}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Tạo một tài khoản mới!</h1>
                        </div>
                        <form class="user" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="UserName" type="text" class="form-control form-control-user" id="exampleFirstName">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="HomeAdress" type="text" class="form-control form-control-user" id="exampleLastName">
                                     <span asp-validation-for="HomeAdress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Password" type="password" class="form-control form-control-user"
                                           id="exampleInputPassword" >
                                     <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user"
                                           id="exampleRepeatPassword" >
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                            </div>
                        </form>
                            @{
                                    var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();

                                    var loginProviders = schemes.ToList();

                                    if (loginProviders.Count == 0)

                                    {

                                    }

                                    else

                                    {
                                        <form  asp-controller="Account" asp-action="ExternalLogin"
                                            asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="user"
                                            role="form">
                                            <div>
                                                <p>
                                                    @foreach (var provider in loginProviders)

                                                    {

                                                        var css = "btn btn-user btn-block ";

                                                        var icon = "";
                                                        @if (provider.Name == "Google")

                                                        {
                                                            css = "btn btn-google btn-user btn-block ";

                                                            icon = "<i class=\"fa-brands fa-google\"></i>";

                                                        }
                                                        else if (provider.Name == "Facebook")

                                                        {
                                                            css = "btn btn-facebook btn-user btn-block ";

                                                            icon = "<i class=\"fa-brands fa-facebook\"></i>";

                                                        }

                                                        <button type="submit" class="@css" value="@provider.Name" name="provider"
                                                            title="Log in using your @provider.Name account">
                                                            @Html.Raw(icon) Đăng nhập với @provider.Name
                                                        </button>
                                                    }
                                                </p>
                                            </div>
                                        </form>
                                    }
                                }
                        
                        <hr>
                        <div class="text-center">
                                <a class="small" asp-action="ForgotPassword">Quyên mật khẩu?</a>
                            </div>
                            <div class="text-center">
                                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="small">
                                    Đã có tài khoản!</a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
