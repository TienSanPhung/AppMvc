@model AppMvc.Models.Contacts.Contact

@{
    ViewData["Title"] = "Gửi liên hệ đến AppMvc";

}

<div class="row">
    <div class="col-md-4">
        <div class="contact-firstcol p-2 h-100 ">
            <img src="~/images/email.png" >
            <h1>@ViewData["Title"]</h1>
            <h4>Chúng tôi luôn lắng nghe ý kiến từ bạn!</h4>
        </div>
    </div>
    <div class="col-md-6">
        <form asp-action="SendContact" class="formcontact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-1">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-1">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows="5" asp-for="Message" class="form-control" ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <input type="submit" value="Gửi liên hệ" class="btn btn-contact" />
            </div>
        </form>
    </div>
</div>
 @{
    var summernote = new AppMvc.Models.Sommernote("#Message");
}
<partial name="_SummernotePartial" model="summernote"/>
